<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	app:layout_behavior="@string/appbar_scrolling_view_behavior"
	tools:context="uiuc.mbr.StartActivity"
	tools:showIn="@layout/activity_start">

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Mobile bus routing"/>

	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Map it up"
		android:layout_gravity="center_horizontal" />
		android:onClick="clickMapBtn" />

	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Get Stop"
		android:id="@+id/button"
		android:onClick="clickStpBtn"
		android:layout_gravity="center_horizontal" />

	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="View Alarms"
		android:onClick="clickViewAlarmsBtn"
		android:layout_gravity="center_horizontal" />

	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Set Event Alarms"
		android:onClick="clickEventAlarmsBtn"
		android:layout_gravity="center_horizontal" />

	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Events"
		android:onClick="clickEventBtn"
		android:layout_gravity="center_horizontal" />

	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Settings"
		android:onClick="clickSettingsBtn"
		android:layout_gravity="center_horizontal" />

	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Calendar Blacklist"
		android:layout_gravity="center_horizontal"
		android:onClick="clickCalendarsBtn" />

	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Edit Saved Addresses"
		android:layout_gravity="center_horizontal"
		android:onClick="clickAddressListBtn" />

	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Update Location For First Alarm"
		android:layout_gravity="center_horizontal"
		android:onClick="clickUpdateFirst" />

</LinearLayout>
